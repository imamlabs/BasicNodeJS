<center>
                                <section class="text-center">
            <div class="card mx-4 mx-md-5 shadow-5-strong" style="
                    margin-top: 60px;
                    margin-bottom: 60px;
                    background: hsla(240, 23%, 95%, 0.8);
                    backdrop-filter: blur(30px);
                    ">
                <div class="card-body py-7 px-md-7">
                    <div class="row  justify-content-center">
                        <div class="container">
                                    <h2 class="fw-bold mb-3"><%= user ? "Edit Data" : "Tambah Data" %></h2>
                                    <form action="<%= user ? '/updateadmin/' + user.id : '/tambahadmin' %>" method="post">
                                        <!-- 2 column grid layout with text inputs for the first and last names -->
                                        <div class="row">
                                              <div class="col-md-6 mb-4">
                                                <div class="form-outline">
                                                    <label for="nama">Username</label>
                                                    <input type="text" class="form-control" id="username" name="username" placeholder="Masukkan Username Admin"
                                                        value="<%= user ? user.username : '' %>">
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div class="form-outline">
                                                    <label for="password">Password</label>
                                                    <input type="text" class="form-control" id="password" name="password" placeholder="Masukkan Password"
                                                        value="<%= user ? user.password : '' %>">
                                                </div>
                                            </div>
                                            
                                            </div>
                                        </div>
                                        <br>
                                        <div class="container">
                                            <button type="submit" class="btn btn-primary btn-block custom-width"">
                                            <%= user ? 'Update' : 'Tambah' %>
                                        </button>

                                        </div>
                                        
                                    </form>
                                </div>
                            </div>
                            </div>
                            </div>
                            </div>
                            </section>
                            </center>